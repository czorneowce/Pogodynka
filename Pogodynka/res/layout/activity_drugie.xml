<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:orientation="vertical"
    tools:context="com.example.pogodynka.DrugieActivity" >
    
    <TextView android:id="@+id/op1"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:alpha="0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Opcja pierwsza"/>
    
     <TextView android:id="@+id/op2"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:alpha="0"
        android:text="Opcja druga"/>
     
      <TextView android:id="@+id/op3"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:alpha="0"
        android:text="Opcja trzecia"/>

</LinearLayout>
